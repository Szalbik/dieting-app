<header class="bg-white/80 backdrop-blur-sm border-b border-slate-200/60 shadow-soft sticky top-0 z-50">
  <div class="flex items-center justify-between h-16 px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <%= link_to root_path, class: 'flex items-center space-x-3 group' do %>
      <%= image_tag 'logo-128.png', alt: 'DietingApp Logo', class: 'h-10 w-auto transition-transform duration-200 group-hover:scale-105' %>
      <span class="hidden sm:block text-xl font-bold bg-gradient-to-r from-emerald-600 to-emerald-700 bg-clip-text text-transparent">DietingApp</span>
    <% end %>

    <% if current_user.present? %>
      <nav class="hidden md:flex items-center space-x-8">
        <%= link_to diets_path, class: 'text-sm font-medium text-slate-700 hover:text-emerald-600 transition-colors duration-200 flex items-center space-x-2 group' do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 transition-transform duration-200 group-hover:scale-110">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
          </svg>
          <span>Diety</span>
        <% end %>
        <% if Current.user.admin? %>
          <%= link_to product_categories_path, class: 'text-sm font-medium text-slate-700 hover:text-emerald-600 transition-colors duration-200 flex items-center space-x-2 group' do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 transition-transform duration-200 group-hover:scale-110">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.438 60.438 0 0 0-.491 6.347A48.62 48.62 0 0 1 12 20.904a48.62 48.62 0 0 1 8.232-4.41 60.46 60.46 0 0 0-.491-6.347m-15.482 0a50.636 50.636 0 0 0-2.658-.813A59.906 59.906 0 0 1 12 3.493a59.903 59.903 0 0 1 10.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0 1 12 13.489a50.702 50.702 0 0 1 7.74-3.342M6.75 15a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm0 0v-3.675A55.378 55.378 0 0 1 12 8.443m-7.007 11.55A5.981 5.981 0 0 0 6.75 15.75v-1.5" />
            </svg>
            <span>Classifications</span>
          <% end %>
        <% end %>
      </nav>
    <% end %>

    <div class="flex items-center space-x-4">
      <% if current_user.present? %>
        <div class="relative inline-block text-left" data-controller="dropdown" data-action="click->dropdown#toggle click@window->dropdown#hide">
          <div data-action='click->toggle#toggle touch->toggle#toggle'>
            <button type="button" class="flex items-center text-slate-400 bg-slate-100 rounded-full hover:text-slate-600 hover:bg-slate-200 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 focus:ring-offset-white transition-all duration-200 p-2" id="menu-button" aria-expanded="true" aria-haspopup="true" data-dropdown-target="button">
              <span class="sr-only">Open user menu</span>
              <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M10 3a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM10 8.5a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM11.5 15.5a1.5 1.5 0 10-3 0 1.5 1.5 0 003 0z" />
              </svg>
            </button>
          </div>
          
          <div data-toggle-target='toggleable' class="absolute right-0 z-10 hidden w-56 mt-2 origin-top-right bg-white/95 backdrop-blur-sm rounded-xl shadow-large ring-1 ring-slate-200/60 focus:outline-none animate-scale-in" 
               role="menu" 
               aria-orientation="vertical" 
               aria-labelledby="menu-button" 
               tabindex="-1" 
               data-dropdown-target="menu"
               data-transition-enter="transition ease-out duration-200"
               data-transition-enter-from="transform opacity-0 scale-95"
               data-transition-enter-to="transform opacity-100 scale-100"
               data-transition-leave="transition ease-in duration-150"
               data-transition-leave-from="transform opacity-100 scale-100"
               data-transition-leave-to="transform opacity-0 scale-95">
            <div class="py-2" role="none">
              
              <%= link_to profile_path, class: 'text-slate-700 group flex items-center px-4 py-2 text-sm hover:bg-emerald-50 transition-colors duration-200' do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-3 text-slate-400 group-hover:text-emerald-500 transition-colors duration-200">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                </svg>
                Your profile
              <% end %>
              
              <%= link_to diets_path, class: 'text-slate-700 group flex items-center px-4 py-2 text-sm hover:bg-emerald-50 transition-colors duration-200' do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-3 text-slate-400 group-hover:text-emerald-500 transition-colors duration-200">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
                </svg>
                Diety
              <% end %>
              
              <% if Current.user.admin? %>
                <%= link_to product_categories_path, class: 'text-slate-700 group flex items-center px-4 py-2 text-sm hover:bg-emerald-50 transition-colors duration-200' do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-3 text-slate-400 group-hover:text-emerald-500 transition-colors duration-200">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.438 60.438 0 0 0-.491 6.347A48.62 48.62 0 0 1 12 20.904a48.62 48.62 0 0 1 8.232-4.41 60.46 60.46 0 0 0-.491-6.347m-15.482 0a50.636 50.636 0 0 0-2.658-.813A59.906 59.906 0 0 1 12 3.493a59.903 59.903 0 0 1 10.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0 1 12 13.489a50.702 50.702 0 0 1 7.74-3.342M6.75 15a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm0 0v-3.675A55.378 55.378 0 0 1 12 8.443m-7.007 11.55A5.981 5.981 0 0 0 6.75 15.75v-1.5" />
                  </svg>
                  Classifications
                <% end %>
              <% end %>
              
              <div class="border-t border-slate-200 my-2"></div>
              
              <%= button_to session_path, method: :delete, class: 'w-full text-left text-slate-700 group flex items-center px-4 py-2 text-sm hover:bg-rose-50 transition-colors duration-200' do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-3 text-slate-400 group-hover:text-rose-500 transition-colors duration-200">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75" />
                </svg>
                Sign out
              <% end %>
              
              <div class="border-t border-slate-200 my-2"></div>
              
              <%= render 'shared/buy_coffee' %>
            </div>
          </div>
        </div>

      <% else %>
        <%= link_to new_session_path, class: 'inline-flex items-center justify-center rounded-lg bg-emerald-600 px-4 py-2.5 text-sm font-semibold text-white shadow-soft hover:bg-emerald-500 hover:shadow-medium focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600 transition-all duration-200' do %>
          Log in
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        <% end %>
      <% end %>
    </div>
  </div>
</header>