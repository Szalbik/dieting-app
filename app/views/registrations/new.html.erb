<div class="flex flex-col justify-center min-h-full px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= link_to root_path, class: 'flex justify-center group' do %>
      <%= image_tag 'logo-128.png', alt: 'DietingApp Logo', class: 'mx-auto h-12 w-auto transition-transform duration-200 group-hover:scale-105' %>
    <% end %>
    <h2 class="mt-8 text-2xl font-bold leading-9 tracking-tight text-center text-slate-900">Create your account</h2>
    <p class="mt-2 text-sm text-center text-slate-600">Start your nutrition journey today</p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_with model: @user, url: registrations_path, data: { turbo: false }, class: 'space-y-6' do |form| %>
      <% if form.object.errors.any? %>
        <div class="rounded-lg bg-rose-50/80 backdrop-blur-sm p-4 border border-rose-200/60 animate-fade-in shadow-soft">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-rose-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <div class="text-sm text-rose-800">
                <ul class="list-disc list-inside space-y-1">
                  <% form.object.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.label :email, 'Email address', class: 'block text-sm font-semibold leading-6 text-slate-700' %>
        <div class="mt-2">
          <%= form.email_field :email_address, class: 'block w-full rounded-lg border-0 py-2.5 px-3 text-slate-900 shadow-soft ring-1 ring-inset ring-slate-300 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-emerald-600 sm:text-sm sm:leading-6 transition-all duration-200' %>
        </div>
      </div>
      
      <div>
        <div class="flex items-center justify-between">
          <%= form.label :password, 'Password', class: 'block text-sm font-semibold leading-6 text-slate-700' %>
          <div class="text-sm">
            <%= link_to 'Forgot password?', new_password_path, class: 'font-semibold text-emerald-600 hover:text-emerald-500 transition-colors duration-200' %>
          </div>
        </div>
        <div class="mt-2">
          <%= form.password_field :password, class: 'block w-full rounded-lg border-0 py-2.5 px-3 text-slate-900 shadow-soft ring-1 ring-inset ring-slate-300 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-emerald-600 sm:text-sm sm:leading-6 transition-all duration-200' %>
        </div>
      </div>
      
      <div>
        <%= form.label :password_confirmation, 'Confirm password', class: 'block text-sm font-semibold leading-6 text-slate-700' %>
        <div class="mt-2">
          <%= form.password_field :password_confirmation, class: 'block w-full rounded-lg border-0 py-2.5 px-3 text-slate-900 shadow-soft ring-1 ring-inset ring-slate-300 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-emerald-600 sm:text-sm sm:leading-6 transition-all duration-200' %>
        </div>
      </div>
      
      <div>
        <%= form.submit 'Create account', data: { turbo: false }, class: 'flex w-full justify-center rounded-lg bg-emerald-600 px-4 py-2.5 text-sm font-semibold leading-6 text-white shadow-soft hover:bg-emerald-500 hover:shadow-medium focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600 transition-all duration-200' %>
      </div>
    <% end %>

    <div class="mt-8 text-center">
      <p class="text-sm text-slate-600">
        Already have an account?
        <%= link_to 'Sign in', new_session_path, class: 'font-semibold leading-6 text-emerald-600 hover:text-emerald-500 transition-colors duration-200' %>
      </p>
    </div>
  </div>
</div>
