<%= form_with model: diet, url: diet_search_path(diet), method: :get, data: { turbo_frame: 'search_results' }, class: "space-y-12 sm:space-y-16" do |f| %>
  <div>
    <h2 class="text-base font-semibold leading-7 text-gray-900">Filter Options</h2>
    <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-600">Select the options to filter the results.</p>

    <div class="mt-10 space-y-8 border-b border-gray-900/10 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:border-t sm:pb-0">
      <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
        <%= f.collection_check_boxes(:diet_set_ids, diet.diet_sets, :id, :name, { class: 'block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5' }, { class: 'mt-2 sm:col-span-2 sm:mt-0' }) %>
      </div>
    </div>
    
    <div class="mt-6 flex items-center justify-end gap-x-6">
      <%= f.submit "Filter", class: 'inline-flex justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
    </div>
  </div>
<% end %>