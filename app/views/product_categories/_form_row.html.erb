<%= form_with(model: pc, class: 'flex flex-wrap gap-4', id: dom_id(pc)) do |form| %>
  <div class="flex-1 py-4 pl-4 pr-3 text-sm font-medium text-gray-900 whitespace-nowrap sm:pl-0">
    <%= pc.product.name %>
  </div>
  <div class="flex-1 px-3 py-4 text-sm text-gray-500 whitespace-nowrap">
    <%= form.select :category_id, (Category.all).collect { |c| [c.name, c.id] } %>
  </div>
  <div class="flex-1 px-3 py-4 text-sm text-gray-500 whitespace-nowrap">
    <%= form.check_box :state, class: 'block rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
  </div>
  <div class="flex-1 px-3 py-4 text-sm text-gray-500 whitespace-nowrap">
    <%= pc.updated_at.strftime("%B %d, %Y") %>
  </div>
  <div class="relative flex-1 py-4 pl-3 pr-4 text-sm font-medium text-right border-b border-gray-200 whitespace-nowrap sm:pr-8 lg:pr-8">
    <%= form.submit 'Update', class: 'text-indigo-600 hover:text-indigo-900' %>
    <%= link_to "Cancel", pc, class: "text-indigo-600 hover:text-indigo-900", "data-turbo-stream": true %>
  </div>
<% end %>

