<%= form_with(model: pc, class: 'grid grid-cols-5 gap-4', id: dom_id(pc)) do |form| %>

  <div class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">
    <%= pc.product.name %>
  </div>
  <div class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= form.select :category_id, (Category.all - Category.where(id: [3, 5, 8, 17, 18, 15])).collect { |c| [ c.name, c.id ] } %>
  </div>
  <div class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= form.check_box :state, class: 'block rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
  </div>
  <div class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= pc.updated_at.strftime("%B %d, %Y") %>
  </div>
  <div class="relative whitespace-nowrap border-b border-gray-200 py-4 pr-4 pl-3 text-right text-sm font-medium sm:pr-8 lg:pr-8">
    <%= form.submit 'Update', class: 'text-indigo-600 hover:text-indigo-900' %>
    <%= link_to "Cancel", pc, class: "text-indigo-600 hover:text-indigo-900", "data-turbo-stream": true %>
  </div>

<% end %>

