        <span class="flex items-center text-sm">
         <input type="radio" name="pricing-plan" value="Startup" class="h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-600 active:ring-2 active:ring-offset-2 active:ring-indigo-600" aria-labelledby="pricing-plans-0-label" aria-describedby="pricing-plans-0-description-0 pricing-plans-0-description-1">
          <!-- Checked: "text-indigo-900", Not Checked: "text-gray-900" -->
         <span id="pricing-plans-0-label" class="ml-3 font-medium"><%= project['name'] %></span>
        </span>
        <span id="pricing-plans-0-description-0" class="ml-6 pl-1 text-sm md:ml-0 md:pl-0 md:text-center">
        <!-- Checked: "text-indigo-900", Not Checked: "text-gray-900" -->
          <% if project['is_shared'] %>
            <span class="font-medium">
              UdostÄ™pniony
            </span>
          <% else %>
          <!-- Checked: "text-indigo-700", Not Checked: "text-gray-500" -->
            <span>
              Prywatny
            </span>
          <% end %>
        </span>
        <!-- Checked: "text-indigo-700", Not Checked: "text-gray-500" -->
      </label>
    <% end %>
  </div>
</fieldset>
